<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.al342839.quizzme.Test"
    android:background="@drawable/fondo">

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/opt2"
        android:layout_below="@+id/opt1"
        android:layout_alignStart="@+id/opt1"
        android:background="@drawable/shape"
        android:textSize="20sp"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/opt3"
        android:layout_below="@+id/opt2"
        android:layout_alignStart="@+id/opt2"
        android:background="@drawable/shape"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textAllCaps="false" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opt3"
        android:layout_alignStart="@+id/opt3"
        android:layout_marginTop="17dp"
        android:id="@+id/opt4"
        android:background="@drawable/shape"
        android:textStyle="normal|bold"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:textSize="20sp"
        android:textAllCaps="false" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/opt1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@drawable/shape"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:shadowColor="@android:color/darker_gray"
        android:textAllCaps="false" />

    <TextView
        android:text="TextView"
        android:id="@+id/pregunta"
        android:layout_width="300dp"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@color/darkPrimaryColor"
        android:layout_height="200dp"
        android:layout_above="@+id/opt1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>
