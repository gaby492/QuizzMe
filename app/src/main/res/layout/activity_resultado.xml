<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:id="@+id/encuestaTextView"
        android:layout_height="80dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="normal|bold"
        android:textColor="#ffa000" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/resultadoImageView"
        android:layout_alignTop="@+id/resultadoTextView"
        android:layout_alignStart="@+id/descripcionTextView" />

    <TextView
        android:text="TextView"
        android:id="@+id/resultadoTextView"
        android:textSize="35sp"
        android:layout_height="150dp"
        android:layout_width="200dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_above="@+id/descripcionTextView"
        android:layout_toEndOf="@+id/resultadoImageView"
        android:textColor="@color/primaryColor" />

    <TextView
        android:id="@+id/descripcionTextView"
        android:textSize="30sp"
        android:layout_marginBottom="17dp"
        android:layout_width="350dp"
        android:textAlignment="viewStart"
        android:layout_height="200dp"
        android:textStyle="normal|bold"
        android:textColor="?attr/colorControlNormal"
        android:text="hola"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
